   wait_until has_link --unicast "$SIDA"
   wait_until path_exists +A +B
   wait_until path_exists +B +A
   set_instance +A
   executeOk_servald mdp ping --timeout=3 "$SIDB" 1
   tfw_cat --stdout --stderr
}

