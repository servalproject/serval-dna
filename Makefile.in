	fifo.c \
	gateway.c \
	keyring.c \
	log.c \
	lsif.c \
	main.c \
	mdp_client.c \
	mkdir.c \
	monitor.c \
	monitor-client.c \
	monitor-cli.c \
	net.c \
	overlay.c \
	overlay_advertise.c \
	overlay_address.c \
	overlay_buffer.c \
	overlay_interface.c \
	overlay_mdp.c \
	overlay_olsr.c \
	overlay_packetformats.c \
	overlay_payload.c \
	overlay_route.c \
	packetformats.c \
	performance_timing.c \
	peers.c \
	randombytes.c \
